{
    "name": "gizra/robo-release-notes",
    "description": "A Robo task for generating release notes from GitHub PRs and issues",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gizra",
            "email": "info@gizra.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "consolidation/robo": "^3.0|^4.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "squizlabs/php_codesniffer": "^3.6",
        "drupal/coder": "^8.3",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Gizra\\RoboReleaseNotes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gizra\\RoboReleaseNotes\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml src tests",
        "cbf": "phpcbf --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml src tests"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
